<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('navbar-link'); -%>
        <link rel="stylesheet" href="/style/user/profile.css">
        <link rel="stylesheet" href="/style/user/home.css">
        <link rel="stylesheet" href="/style/findingCustomer.css">\
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>

<body>
    <%- include('navbar-menu'); -%>
        <%- include('navbar-primary'); -%>
            <div class="main-content" style="height: 700px;">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <h1>Rút tiền</h1>
                            <% errors.forEach(function(error){ %>
                                <div class="alert alert-danger" role="alert">
                                    <%= error %>
                                </div>
                                <% }); %>
                                    <form method="POST">
                                        <label for="accountNumber">Nhập số tài khoản :</label>
                                        <input class="form-control" type="text" name="accountNumber" placeholder="Nhập số tài khoản">
                                        <label for="amountOfMoney">Nhập số tiền :</label>
                                        <input class="form-control" type="number" name="amountOfMoney" min="1">
                                        <div class="form-group ">
                                            <label for="inputState">Đơn vị tiền tệ</label>
                                            <select id="inputState" class="form-control" name="type">
                           <option value="1" selected>VNĐ</option>
                           <option value="2">$</option>
                         </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Xác nhận giao dịch</button>
                                    </form>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <img src="https://image.flaticon.com/icons/svg/714/714867.svg" alt="">
                    </div>
                </div>
            </div>
</body>
<%- include('../footer.ejs'); -%>
    <script>
        $('.btn-expand-collapse').click(function(e) {
            $('.navbar-primary').toggleClass('collapsed');
        });
    </script>
    <script>
        $("#one").click(function() {
            window.location.href = "/transfer";
        });
        $("#two").click(function() {
            window.location.href = "/history";
        });
        $("#three").click(function() {
            window.location.href = "/profile";
        });
    </script>

</html>