<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('navbar-link'); -%>
        <link rel="stylesheet" href="/style/user/profile.css">
        <link rel="stylesheet" href="/style/1.css">
</head>

<body>
    <%- include('navbar-menu'); -%>
        <%- include('navbar-primary'); -%>
            <div class="main-content" style="padding-bottom: 82px;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel">
                            <img class="pic img-circle" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="User photo" />
                            <div class="username">
                                <%= curentUser.name %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="sidebar-nav">
                            <div class="navbar navbar-default" role="navigation">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                 <span class="sr-only">Toggle navigation</span>
                 <span class="icon-bar"></span>
                 <span class="icon-bar"></span>
                 <span class="icon-bar"></span>
               </button>
                                    <span class="visible-xs navbar-brand">Profile menu</span>
                                </div>
                                <div class="navbar-collapse collapse sidebar-navbar-collapse">
                                    <ul class="nav navbar-nav">
                                        <li><a href="/profile" class="active">Profile</a></li>
                                        <li><a href="/editprofile">Edit profile</a></li>
                                        <li><a href="/changepassword">Change password</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <span class="profile-item-header"> Profile:</span>
                        <div class="edit-profile">
                            <form id="editProfileForm" method="post">
                                <div class="form-group row">
                                    <label class="col-xs-3 form-control-label" for="stk">Số Tài Khoản</label>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" id="stk" placeholder="" value="<%= curentUser.accountNumber %>" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xs-3 form-control-label" for="sdtk">Số Dư Tài Khoản</label>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" id="sdtk" placeholder="" value="<%= curentUser.blanceSpendAccountVND %> VND" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xs-3 form-control-label" for="sdtk">CMND/CCCD/Hộ chiếu</label>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" id="sdtk" placeholder="" value="<%= curentUser.identityCard %>" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xs-3 form-control-label" for="sdtk">Ngày Sinh</label>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" id="sdtk" placeholder="" value="<%= moment(curentUser.dateOfBirth).format( 'MMM-DD-YYYY') %>" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xs-3 form-control-label" for="sdtk">Đỉa Chỉ</label>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" id="sdtk" placeholder="" value="<%= curentUser.address %>" disabled>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
</body>
<%- include('../footer.ejs'); -%>
    <script>
        $('.btn-expand-collapse').click(function(e) {
            $('.navbar-primary').toggleClass('collapsed');
        });
    </script>

</html>